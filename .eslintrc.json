{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks"
  ],
  "ignorePatterns": [
    "**/*.js"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)",
        "**/*.jsx"
      ],
      "rules": {
        "react/no-access-state-in-setstate": "warn"
      }
    }
  ]
}